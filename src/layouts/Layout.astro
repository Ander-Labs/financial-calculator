---
import Footer from "@components/global/footer.astro";
import Header from "@components/global/header.astro";
import NavMobile from "@components/global/navMobile.astro";
import { ViewTransitions } from "astro:transitions";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<script
  async
  src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-2964007773702778"
  crossorigin="anonymous"></script>

<script
  is:raw
  src="https://cdnjs.cloudflare.com/ajax/libs/clipboard.js/2.0.11/clipboard.min.js"
></script>

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <!-- ads -->
    <meta name="google-adsense-account" content="ca-pub-2964007773702778" />

    <!-- ViewTransitions  -->
    <ViewTransitions />
  </head>
  <body>
    <Header />
    <slot />
    <Footer />
    <NavMobile />
  </body>
</html>
